<div>
    <h1> New Booking </h1>

    <h2> Flight Information </h2>
        <b> <div>
            From: <%= Airport.find_by(:id => @chosen_flight.from_airport_id).name %>
            To: <%= Airport.find_by(:id => @chosen_flight.to_airport_id).name %>
            Number of passengers: <%= @number_of_passengers %>
            Flight ID: <%= @chosen_flight.id %>
        </b> </div>

    <%= form_for @booking do |f| %>
            <%= f.fields_for :passengers do |p| %>
                <div>
                    <%= p.label :name %>
                    <%= p.text_field :name %>

                    <%= p.label :email %>
                    <%= p.email_field :email %>
                </div>
            <% end %>
        <%= f.hidden_field "flight_id", value: @chosen_flight.id %>
        <%= f.submit %>
    <% end %>
</div>